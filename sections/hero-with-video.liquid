      "default": "Buy Now",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Guarantee"
    },
    {
      "type": "checkbox",
      "id": "show_guarantee",
