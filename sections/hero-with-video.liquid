      "label": "Show rating"
    },
    {
      "type": "image_picker",
      "id": "stars_image",
      "label": "Stars image"
    },
    {
      "type": "text",
      "id": "rating_text",
      "default": "4.9/5",
      "label": "Rating text"
    },
    {
      "type": "url",
      "id": "rating_link",
      "label": "Rating link"
    },
    {
      "type": "text",
      "id": "subtext",
      "default": "Backed by British design excellence and recommended by dentists worldwide",
      "label": "Subtext"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Buy Now",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Guarantee"
    },
    {
      "type": "checkbox",
      "id": "show_guarantee",
      "default": true,
      "label": "Show guarantee"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "default": "30-day money back guarantee",
      "label": "Guarantee text"
    },
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "info": "Upload video to Files and paste URL here"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video poster image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "#F2F2F2",
      "label": "Section background"
    },
    {
      "type": "color",
      "id": "container_background",
      "default": "#FFFFFF",
      "label": "Container background"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#121212",
      "label": "Heading color"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#656565",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "button_background",
      "default": "#6B46FF",
      "label": "Button background"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "default": "#FFFFFF",
      "label": "Button text color"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Hero with Video"
    }
  ]
}
